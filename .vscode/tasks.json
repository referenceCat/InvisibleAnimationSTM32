{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": "build",
            "args": [
                "-f",
                "MyMakefile"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "st-flash",
            "args": [
                "--reset",
                "write",
                "bin/firmware.elf",
                "0x8000000"
            ],
            "group": "build"
        },
        {
            "label": "info",
            "type": "shell",
            "command": "st-info",
            "args": [
                "--probe"
            ],
            "group": "build"
        },
        {
            "label": "clear",
            "type": "shell",
            "command": "rm", 
            "args": [
                "-rfv",
                "${workspaceRoot}/bin/*"
            ],
            "group": "build"
        }
